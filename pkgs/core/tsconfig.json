{
  "compilerOptions": {
    "target": "ES2016",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "types": ["vitest/importMeta", "vitest/globals"]
  },
  "include": ["src/**/*"]
}
